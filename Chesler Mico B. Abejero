import java.text.NumberFormat;

public class Employee {
    // Private instance variables
    private int employee_id;
    private String employee_name;
    private double employee_salary;
    private String jobTitle;           // New: job title
    private int yearsOfExperience;     // New: work experience in years

    // Constructor
    public Employee(int id, String name, double salary, String jobTitle, int experience) {
        this.employee_id = id;
        this.employee_name = name;
        this.employee_salary = salary;
        this.jobTitle = jobTitle;
        this.yearsOfExperience = experience;
    }

    // Getter and Setter for employee_id
    public int getEmployeeId() {
        return employee_id;
    }

    public void setEmployeeId(int id) {
        this.employee_id = id;
    }

    // Getter and Setter for employee_name
    public String getEmployeeName() {
        return employee_name;
    }

    public void setEmployeeName(String name) {
        this.employee_name = name;
    }

    // Getter for employee_salary (formatted)
    public String getEmployeeSalary() {
        NumberFormat formatter = NumberFormat.getCurrencyInstance();
        return formatter.format(employee_salary);
    }

    // New Feature 1: Calculate tax (e.g., 10% of salary)
    public String calculateTax() {
        double tax = employee_salary * 0.10; // 10% tax
        NumberFormat formatter = NumberFormat.getCurrencyInstance();
        return formatter.format(tax);
    }

    // New Feature 2: Promote employee by updating job title
    public void promote(String newTitle, double raisePercentage) {
        this.jobTitle = newTitle;
        this.employee_salary += employee_salary * (raisePercentage / 100);
    }

    // New Feature 3: Display work experience
    public String displayExperience() {
        return employee_name + " has " + yearsOfExperience + " years of experience.";
    }

    // Getter and Setter for job title
    public String getJobTitle() {
        return jobTitle;
    }

    public void setJobTitle(String jobTitle) {
        this.jobTitle = jobTitle;
    }

    // Getter and Setter for years of experience
    public int getYearsOfExperience() {
        return yearsOfExperience;
    }

    public void setYearsOfExperience(int years) {
        this.yearsOfExperience = years;
    }
}


import java.text.NumberFormat;

public class Employee {
    // Private instance variables
    private int employee_id;
    private String employee_name;
    private double employee_salary;
    private String jobTitle;           // New: job title
    private int yearsOfExperience;     // New: work experience in years

    // Constructor
    public Employee(int id, String name, double salary, String jobTitle, int experience) {
        this.employee_id = id;
        this.employee_name = name;
        this.employee_salary = salary;
        this.jobTitle = jobTitle;
        this.yearsOfExperience = experience;
    }

    // Getter and Setter for employee_id
    public int getEmployeeId() {
        return employee_id;
    }

    public void setEmployeeId(int id) {
        this.employee_id = id;
    }

    // Getter and Setter for employee_name
    public String getEmployeeName() {
        return employee_name;
    }

    public void setEmployeeName(String name) {
        this.employee_name = name;
    }

    // Getter for employee_salary (formatted)
    public String getEmployeeSalary() {
        NumberFormat formatter = NumberFormat.getCurrencyInstance();
        return formatter.format(employee_salary);
    }

    // New Feature 1: Calculate tax (e.g., 10% of salary)
    public String calculateTax() {
        double tax = employee_salary * 0.10; // 10% tax
        NumberFormat formatter = NumberFormat.getCurrencyInstance();
        return formatter.format(tax);
    }

    // New Feature 2: Promote employee by updating job title
    public void promote(String newTitle, double raisePercentage) {
        this.jobTitle = newTitle;
        this.employee_salary += employee_salary * (raisePercentage / 100);
    }

    // New Feature 3: Display work experience
    public String displayExperience() {
        return employee_name + " has " + yearsOfExperience + " years of experience.";
    }

    // Getter and Setter for job title
    public String getJobTitle() {
        return jobTitle;
    }

    public void setJobTitle(String jobTitle) {
        this.jobTitle = jobTitle;
    }

    // Getter and Setter for years of experience
    public int getYearsOfExperience() {
        return yearsOfExperience;
    }

    public void setYearsOfExperience(int years) {
        this.yearsOfExperience = years;
    }
}



public class Car {

    // Private instance variables
    private String company_name;
    private String model_name;
    private int year;
    private double mileage;
    private String fuelType; // e.g., "Petrol", "Diesel", "Electric"

    // Constructor
    public Car(String company, String model, int year, double mileage, String fuelType) {
        this.company_name = company;
        this.model_name = model;
        this.year = year;
        this.mileage = mileage;
        this.fuelType = fuelType;
    }

    // Getter and Setter for company_name
    public String getCompanyName() {
        return company_name;
    }

    public void setCompanyName(String company) {
        this.company_name = company;
    }

    // Getter and Setter for model_name
    public String getModelName() {
        return model_name;
    }

    public void setModelName(String model) {
        this.model_name = model;
    }

    // Getter and Setter for year
    public int getYear() {
        return year;
    }

    public void setYear(int year) {
        this.year = year;
    }

    // Getter and Setter for mileage
    public double getMileage() {
        return mileage;
    }

    public void setMileage(double mileage) {
        this.mileage = mileage;
    }

    // Getter and Setter for fuelType
    public String getFuelType() {
        return fuelType;
    }

    public void setFuelType(String fuelType) {
        this.fuelType = fuelType;
    }

    // Feature 1: Calculate estimated insurance premium
    public double calculateInsurancePremium() {
        int carAge = java.time.Year.now().getValue() - year;
        double basePremium = 500; // base amount
        double ageFactor = carAge * 20; // premium increases 20 per year
        return basePremium + ageFactor;
    }

    // Feature 2: Check if car is eco-friendly
    public boolean isEcoFriendly() {
        return fuelType.equalsIgnoreCase("Electric") || fuelType.equalsIgnoreCase("Hybrid");
    }

    // Feature 3: Car description
    public String getCarDescription() {
        return "Car: " + company_name + " " + model_name + " (" + year + "), Mileage: " + mileage + " km, Fuel: " + fuelType;
    }
}


public class CarMain {

    public static void main(String[] args) {
        // Create Car object (company, model, year, mileage, fuelType)
        Car car = new Car("Toyota", "Corolla", 2018, 12000.5, "Hybrid");

        // Display car details using new feature
        System.out.println("=== Car Details ===");
        System.out.println(car.getCarDescription());

        // Feature 1: Calculate insurance premium
        System.out.println("Estimated Insurance Premium: $" + car.calculateInsurancePremium());

        // Feature 2: Check if car is eco-friendly
        System.out.println("Is Eco-Friendly? " + (car.isEcoFriendly() ? "Yes" : "No"));

        // Update car mileage and fuel type
        car.setMileage(12500.0);
        car.setFuelType("Electric");
        System.out.println("\n=== Updated Car Details ===");
        System.out.println(car.getCarDescription());
        System.out.println("Estimated Insurance Premium: $" + car.calculateInsurancePremium());
        System.out.println("Is Eco-Friendly? " + (car.isEcoFriendly() ? "Yes" : "No"));
    }
}

